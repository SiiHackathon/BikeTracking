@model IEnumerable<BikeTracker.Models.TeamViewModel>

@{
    ViewBag.Title = "Teams";
}

<h2>Teams</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.TeamId })
        </td>
    </tr>
}

</table>
