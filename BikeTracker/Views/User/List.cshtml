@model IEnumerable<BikeTracker.Models.UserViewModel>
@{
    ViewBag.Title = "Riders";
}

<h1 class="page-title">@ViewBag.Title @Html.ActionLink("+", "Edit", new { id = 0 }, new { @class="btn btn-primary btn-raised" })</h1>
@if (ViewBag.Subtitle != "")
{
	<h3 class="page-subtitle">@ViewBag.Subtitle</h3>
}

<div class="row">
	<div class="col-md-12">
		<section class="bs-component">

			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Name)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.TeamName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.TotalDistance)
						</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model) {
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TeamName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TotalDistance)
							</td>
							<td class="text-right">
								@Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class="btn btn-default btn-raised" }) 
								@Html.ActionLink("Details", "Details", new { id=item.UserId }, new { @class = "btn btn-default btn-raised" }) 
								@Html.EditorFor(m => item.UserId, "DeleteButton", new { message = $"Are you sure you want to delete user {item.Name}?" })
							</td>
						</tr>
					}
				</tbody>
			</table>

			<p class="text-right">
				@Html.ActionLink("Create", "Edit", new { id = 0 }, new { @class="btn btn-primary btn-raised" })
			</p>
			
			
@section Scripts
{
    <script>
    $(function() {
        $('.deleteButton').click(function () {
            return confirm($(this).data("message"));
        });
    });
    </script>
}