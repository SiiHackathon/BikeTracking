@model IEnumerable<BikeTracker.Models.UserViewModel>

@{
    ViewBag.Title = "Raiders";
}

<h2>Raiders</h2>

<p>
    @Html.ActionLink("Create new rider", "Edit", new { id = 0 }, new { @class="btn btn-success" })
</p>
<table class="table edit-list">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDistance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDistance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class="btn btn-default" }) 
            @Html.ActionLink("Details", "Details", new { id=item.UserId }, new { @class = "btn btn-default" }) 
            @Html.EditorFor(m => item.UserId, "DeleteButton", new { message = $"Are you sure you want to delete user {item.Name}?" })
        </td>
    </tr>
}
</table>

@section Scripts
{
    <script>
    $(function() {
        $('.deleteButton').click(function () {
            return confirm($(this).data("message"));
        });
    });
    </script>
}