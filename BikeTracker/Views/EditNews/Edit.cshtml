@model BikeTracker.Models.NewsDetailsViewModel
@{
    ViewBag.Title = "Add news";
}

<h1 class="page-title">@ViewBag.Title</h1>
@if (ViewBag.Subtitle != "")
{
	<h3 class="page-subtitle">@ViewBag.Subtitle</h3>
}

<div class="row">
	<div class="col-md-12">
		<section class="bs-component">
			@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal well well-lg", role = "form" })) {
				@Html.HiddenFor(model => model.NewsId)
				@Html.HiddenFor(model => model.AddedOn)			
				<legend>Create new article</legend>
				<div class="form-group">
					@Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.Title)
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Content, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.Content, new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.Content)
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12 text-right">
						<input type="submit" class="btn btn-primary btn-raised" value="Create" />
					</div>
				</div>
			}
		</section>
	</div>
</div>